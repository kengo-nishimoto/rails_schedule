<header>
  <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>  

<% if flash[:falese] %>
  <p class="falese"><%= flash[:falese] %></p>
<% end %>

<%= render "shared/error", obj: @user %>

<%= form_for @user do |f| %>
<table>
  <h3>スケジュール編集</h3>
  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th><%= f.label :star, "開始日" %></th>
    <td><%= f.date_field :star %></td>
  </tr>
  <tr>
    <th><%= f.label :finis, "終了日" %></th>
    <td><%= f.date_field :finis %></td>
  </tr>
  <tr>
    <th><%= f.label :allday, "終日" %></th>
    <td>
      <%= f.check_box :allday, {}, checked_value = "○", uncheked_value = "" %>
      <br>
      終日の場合はチェックを入れます
    </td>
  </tr>
  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_area :memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "スケジュールの編集を完了する" %></li>
    <li><%= link_to "スケジュール一覧に戻る", :users %></li>
  </ul>
</div>

<footer>
  <h1>現在の日時：<%= Date.current.strftime('%Y年%m月%d日') %></h1>
</footer>

<% end %>