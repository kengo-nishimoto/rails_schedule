<header>
  <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>

<table>
    <h3>スケジュール詳細</h3>
    <tr>
      <th>タイトル</th>
      <td><%= @user.title %></td>
    </tr>  
    <tr>
      <th>開始日</th>
      <td><%= @user.star %></td>
    </tr>  
      <th>終了日</th>
      <td><%= @user.finis %></td>
    </tr>
    <tr>
      <th>終日</th>
      <td><%= @user.allday %></td>
    </tr>
    <tr>
      <th>スケジュールメモ</th>
      <td><%= @user.memo %></td>
    </tr>  
</table>

<p><%= link_to"スケジュール一覧に戻る", :users %></p>
<p><%= link_to"スケジュールを編集する", [:edit, @user] %></p>
<p><%= link_to"スケジュールを削除する", @user, method: :delete, data: {confirm: "本当に削除しますか？"} %></p>

<footer>
  <h1>現在の日時：<%= Date.current.strftime('%Y年%m月%d日') %> </h1>
</footer>